<Window x:Class="MakeScreenshotGUI.ScreenClip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeScreenshotGUI"
        mc:Ignorable="d"
        Title="ScreenClip" Width="1920" Height="1080" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" Left="0" Top="0" Topmost="True">
    <Grid MouseLeftButtonDown="MouseLeftButton_Down" MouseLeftButtonUp="MouseLeftButton_Up">
        <Image x:Name="PictureBox" ScrollViewer.VerticalScrollBarVisibility="Disabled" />
        <Button Content="Close" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Close"/>
    </Grid>
</Window>
